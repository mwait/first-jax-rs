<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
         http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<jaxrs:server id="patientService" address="/patientservice"
		staticSubresourceResolution="true">

		<jaxrs:serviceBeans>
			<ref bean="serviceBean" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="exceptionHandler"/>
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="serviceBean" class="com.wait.jaxrs.PatientServiceImpl" />
	<!-- ten bean definiuje mapowanie na xml jsona -->
	<bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
	<!-- wyjatki przez mappera -->
	<bean id="exeptionHandler" class="com.wait.jaxrs.exceptions.BusinessExceptionMapper"></bean>
</beans>
